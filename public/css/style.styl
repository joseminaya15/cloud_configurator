	-moz-transition width 0.3s linear, margin 0.3s linear, opacity 0.1s linear, transform .3s linear
	-ms-transition width 0.3s linear, margin 0.3s linear, opacity 0.1s linear, transform .3s linear
	-o-transition width 0.3s linear, margin 0.4s linear, opacity 0.1s linear, transform .3s linear
	transition width 0.3s linear, margin 0.3s linear, opacity 0.1s linear, transform .3s linear
	width 100%
	max-width 205px
	margin 10px
	.js-card--large__content
		border 1px solid $color
		border-radius 10px
		padding 5px 10px
		text-align center
		.js-card--large__content-imagen
			flexCenter()
			justify-content center
			height 120px
		.js-card--large__content-text
			height 150px
			p
				font-size 17px
				text-align left
				line-height 21px
				strong
					color $color
					font-family $medium
			.form-group
				textarea
					background-color transparent
					border-radius 0
					border 1px solid #FFFFFF
					color #FFFFFF
		.js-card--large__content-tipo
			flexEnd()
			height 145px
			justify-content center
		.js-card--large__content-name
			flexEnd()
			justify-content center
			margin 12px 0 10px 0
			height 32px
			small
				font-size 16px
				line-height 18px	
	.js-card--large__button
		padding 10px 0
		button
			border 1px solid $color
			background-color transparent
			color #FFFFFF
			text-transform initial
			width 100%
			border-radius 0
			font-family $medium
			font-size 18px
			&:hover
				transitionBgColor()
				background-color $color
