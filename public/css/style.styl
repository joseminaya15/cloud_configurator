$regular = 'BentonSansRegular'
$medium  = 'BentonSansMedium'
$bold    = 'BentonSansBold'

flexCenter()
	display flex
	display -webkit-flex
	align-items center
transitionOpacity()
	-webkit-transition opacity .3s linear
	-moz-transition opacity .3s linear
	-ms-transition opacity .3s linear
	-o-transition opacity .3s linear
	transition opacity .3s linear
transitionWidth()
	-webkit-transition max-width .3s linear
	-moz-transition max-width .3s linear
	-ms-transition max-width .3s linear
	-o-transition max-width .3s linear
	transition max-width .3s linear
absolute()
	position absolute
	top 0
	left 0
	right 0
	bottom 0
flipCard()
	-moz-backface-visibility hidden
	-webkit-backface-visibility hidden
	backface-visibility hidden
	-webkit-transition -webkit-transform 500ms
	-moz-transition -moz-transform 500ms
	-o-transition -o-transform 500ms
	transition transform 500ms
	border-radius 5px
	-moz-box-shadow 1px 1px 2px rgba(14, 85, 143, 0.8)
	-webkit-box-shadow 1px 1px 2px rgba(14, 85, 143, 0.8)
	box-shadow 1px 1px 2px rgba(14, 85, 143, 0.8)
body
	margin 0
	padding 0
	overflow hidden
	font-family $regular
	background-color #000000
.js-header
	position fixed
	top 0
	width 100%
	background-color #000000
	z-index 2
	padding 15px 25px
	transitionOpacity()
	flexCenter()
	img
		width 100%
		max-width 150px
.js-fondo__imagen
	background url(../img/fondo/fondo-imagen.jpg) no-repeat center center
	background-size cover
	absolute()
	&:AFTER
		content ''
		background-color #000000
		opacity .2
		absolute()
.js-bar
	height 100vh
	width 100%
	z-index 1
	position absolute
	right 0
	top 0
	justify-content flex-end
	flexCenter()
	.js-bar__children
		height 100%
		width 100%
		max-width 120px
		&:nth-child(1)
			background-color rgba(240, 171, 0, 0.4)
		&:nth-child(2)
			background-color rgba(240, 171, 0, 0.7)
		&:nth-child(3)
			background-color rgba(240, 171, 0, 1)
.js-window
	width 100%
	height 100vh
	absolute()
	flexCenter()
	transitionOpacity()
.js-title
	z-index: 5
	color #FFFFFF
	width 100%
	max-width 580px
	margin-left 75px
	h1
		font-size 60px
		font-family $medium
		strong
			font-family $bold
	p
		font-size 30px
		line-height 34px
		margin 0
.js-idioma
	.btn-group
		width 100% !important
		max-width 180px;
		button
			background-color transparent !important
			color #FFFFFF !important
			border none
			box-shadow none !important
			outline 0 !important
.js-button-next
	position fixed
	bottom 0
	left 0
	right 0
	text-align center
	background-color #000000
	z-index 2
	button
		background-color transparent !important
		i
			font-size 36px
			color #FFFFFF
.js-minilogo
	position absolute
	left 60px
	bottom 40px
	img
		width 100%
		max-width 155px
.js-container
	width 100%
	max-width 1350px
	height 100vh
	justify-content flex-start
	margin auto
	transitionWidth()
	flexCenter()
.js-window1
	h2
		color #FFFFFF
		font-size 80px
		strong
			background linear-gradient(to right, #EFAB1F 0%, #E35500 100%)
			-webkit-background-clip text
			-webkit-text-fill-color transparent
	 