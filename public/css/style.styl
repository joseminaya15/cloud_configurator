			-webkit-background-clip text
			-webkit-text-fill-color transparent
.js-card__flex
	flexStart()
	width 100%
.js-card
	width 100%
	max-width 180px
	margin 20px
	.js-card-imagen
		position relative
		width 100%
		max-width 180px
		height 180px
		.js-card-flip
			flipCard()
			width 100%
			height 100%
			&.js-card-flip__front
				flipCardFront()
				flexCenter()
				justify-content center
				border 1px solid $color
			&.js-card-flip__back
				flipCardBack()
				flexCenter()
				background-color $color
				flex-direction column
				align-items start
				justify-content flex-end
				padding 20px
				h2
					color #000000
					margin 5px 0
					font-size 36px
					font-family $medium
				button
					box-shadow none
					margin-top 20px
					text-transform initial
					font-family $bold
					height 30px
					line-height 20px		
		&:hover
			.js-card-flip__front
				flipCardFrontHover()
			.js-card-flip__back
				flipCardBackHover()
.js-card-content
